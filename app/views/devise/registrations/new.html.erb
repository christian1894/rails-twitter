<div class="section">
	<div class="container">
	<div class="row justify-content-center">
			<div class="col-md-4">
			
		<h2>Sign Up</h2>

		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  		<%= f.error_notification %>

	  	<div class="form-group">
	    	<%= f.input :name, autofocus: true, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>

	  	<div class="form-group">
	    	<%= f.input :username, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
		</div>

	  	<div class="form-group">
	    <%= f.input :email, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
  
		  
			<div class="form-group">
				<%= f.input :password, input_html: { class:"form-control" }, wrapper: false, label_html: { class:"label" }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			</div>

			<div class="form-group">
				<%= f.input :password_confirmation, input_html: { class: "form-control" }, wrapper: false, label_html: { class: "label" } %>		
			</div>

			<div class="form-group">
		 		<%= f.button :submit, "Sign up", class:"btn btn-primary" %>
		 	</div>

		<% end %>
			<br />
			<%= render "devise/shared/links" %>
	</div>
	</div>
	</div>
</div>
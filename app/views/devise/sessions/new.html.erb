<section class="section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-4">
				<h2 class="title is-2">Log in</h2>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

				  	<div class="form-group">
				    	<%= f.input :email, required: false, class: "form-control", input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label" } %>
				    </div>
				  </>

				  	<div class="form-group">
				    <%= f.input :password, required: false, input_html: { class: "form-control"}, wrapper: false, label_html: { class: "label" } %>
						</div>

				  	<div class="form-group form-check">
				    <%= f.input :remember_me, wrapper: false, input_html: {class: "form-check-input"}, label_html: { class: "label" }, as: :boolean if devise_mapping.rememberable? %>
				  	</div>

				  <%= f.button :submit, "Log in", class:"btn btn-primary" %>
				<% end %>
				<br/>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</section>